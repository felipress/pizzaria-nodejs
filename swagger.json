                                "number": {"type": "integer"},
                                "complement": {"type": "string"},
                                "zipcode": {"type": "string"},
                                "createdAt": {"type": "string"}
                            }
                        }
                    },
                    "createdAt": {"type": "string"},
                    "adminUser": {"type": "boolean"}
                }
            }
