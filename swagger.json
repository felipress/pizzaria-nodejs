    "paths": {
        "/auth/login": {
            "get": {
                "summary": "Autentica usuários na API.",
                "description": "Rota reponsável por realizar a autenticação de todos usuários na API retornando seu Token.",
                "tags": ["Auth"],
                "parameters": [
                    {
                        "in": "body",
                        "schema": {
                            "$ref": "#/components/schemas/user"
                        },
                        "name": "body"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK, tarefa realizada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "email": {"type": "string"},
                                        "token": {"type": "string"}
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "UNAUTHORIZED, erro de autenticação ou problemas com token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {"type": "string"}
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "INTERNAL SERVER ERROR, erro no servidor da aplicação",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {"type": "string"}
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
